
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Leads por Dia - Kommo Widget</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #111;
      color: #fff;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: auto;
    }
    label {
      display: block;
      margin: 10px 0 5px;
    }
    input[type="date"] {
      background: #222;
      border: 1px solid #555;
      color: #fff;
      padding: 8px;
      margin-right: 10px;
    }
    canvas {
      background: #1a1a1a;
      border-radius: 8px;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Leads criados por dia</h2>
    <label>Selecione o período:</label>
    <input type="date" id="startDate" />
    <input type="date" id="endDate" />
    <button onclick="loadChart()">Atualizar</button>
    <canvas id="leadsChart" width="800" height="400"></canvas>
  </div>

  <script>
    const chartCanvas = document.getElementById("leadsChart").getContext("2d");
    let leadsChart;

    async function loadChart() {
      const start = document.getElementById("startDate").value;
      const end = document.getElementById("endDate").value;

      if (!start || !end) {
        alert("Por favor, selecione as datas de início e fim.");
        return;
      }

      const startDate = new Date(start);
      const endDate = new Date(end);
      const dateLabels = [];
      const leadsPerDay = [];

      for (let d = new Date(startDate); d <= endDate; d.setDate(d.getDate() + 1)) {
        const formatted = d.toISOString().split("T")[0];
        dateLabels.push(formatted);
        leadsPerDay.push(Math.floor(Math.random() * 10)); // Simula dados aleatórios
      }

      if (leadsChart) leadsChart.destroy();

      leadsChart = new Chart(chartCanvas, {
        type: "bar",
        data: {
          labels: dateLabels,
          datasets: [{
            label: "Leads criados",
            data: leadsPerDay,
            backgroundColor: "rgba(0, 172, 193, 0.8)",
            borderRadius: 4
          }]
        },
        options: {
          indexAxis: 'y',
          scales: {
            x: {
              ticks: { color: "#fff" },
              grid: { color: "#444" }
            },
            y: {
              ticks: { color: "#fff" },
              grid: { color: "#444" }
            }
          },
          plugins: {
            legend: { labels: { color: "#fff" } }
          }
        }
      });
    }
  </script>
</body>
</html>
